/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    Not(in=sel, out=notsel);
    Nand(a=a, b=notsel, out=nand1);
    Nand(a=b, b=sel, out=nand2);
    Nand(a=nand1, b=nand2, out=out);
}